    <TextView
        android:id="@+id/atkHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="ATK >"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCategory" />

    <EditText
        android:id="@+id/attackEntry"
        android:layout_width="54dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="value"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/atkHeader"
        app:layout_constraintTop_toBottomOf="@+id/titleCategory" />

    <TextView
        android:id="@+id/defHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Def >"
        app:layout_constraintStart_toEndOf="@+id/attackEntry"
        app:layout_constraintTop_toBottomOf="@+id/titleCategory" />

    <EditText
        android:id="@+id/defEntry"
        android:layout_width="54dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="value"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/defHeader"
        app:layout_constraintTop_toBottomOf="@+id/titleCategory" />

    <TextView
        android:id="@+id/hpHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="HP >"
        app:layout_constraintStart_toEndOf="@+id/defEntry"
        app:layout_constraintTop_toBottomOf="@+id/titleCategory" />

    <EditText
        android:id="@+id/hpEntry"
        android:layout_width="54dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="value"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/hpHeader"
        app:layout_constraintTop_toBottomOf="@+id/titleCategory" />


